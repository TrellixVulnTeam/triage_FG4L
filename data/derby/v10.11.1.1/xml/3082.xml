	at org.apache.derbyTesting.functionTests.tests.jdbcapi.DataSourceTest.assertStringFormat(DataSourceTest.java:2914)&lt;br/&gt;
	at org.apache.derbyTesting.functionTests.tests.jdbcapi.DataSourceTest.assertToString(DataSourceTest.java:2883)&lt;br/&gt;
	at org.apache.derbyTesting.functionTests.tests.jdbcapi.DataSourceTest.assertTenConnectionsUnique(DataSourceTest.java:2982)&lt;br/&gt;
	at org.apache.derbyTesting.functionTests.tests.jdbcapi.DataSourceTest.testAllDataSources(DataSourceTest.java:228)&lt;br/&gt;
	at sun.reflect.NativeMethodAccessorImpl.invoke(NativeMethodAccessorImpl.java:39)&lt;br/&gt;
	at sun.reflect.DelegatingMethodAccessorImpl.invoke(DelegatingMethodAccessorImpl.java:25)&lt;br/&gt;
