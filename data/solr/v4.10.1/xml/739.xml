<item>
            <title>[SOLR-739] Add support for OmitTf</title>
                <link>https://issues.apache.org/jira/browse/SOLR-739</link>
                <project id="12310230" key="SOLR">Solr</project>
                    <description>&lt;p&gt;Allow setting omitTf in the field schema. Default to true for all but text fields.&lt;/p&gt;</description>
                <environment></environment>
        <key id="12403360">SOLR-739</key>
            <summary>Add support for OmitTf</summary>
                <type id="2" iconUrl="https://issues.apache.org/jira/images/icons/issuetypes/newfeature.png">New Feature</type>
                                            <priority id="4" iconUrl="https://issues.apache.org/jira/images/icons/priorities/minor.png">Minor</priority>
                        <status id="6" iconUrl="https://issues.apache.org/jira/images/icons/statuses/closed.png" description="The issue is considered finished, the resolution is correct. Issues which are closed can be reopened.">Closed</status>
                    <statusCategory id="3" key="done" colorName="green"/>
