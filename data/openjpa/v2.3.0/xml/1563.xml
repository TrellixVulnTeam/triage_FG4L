&lt;p&gt;+    public static Collection&amp;lt;Object&amp;gt; toOpenJPAObjectIds(ClassMetaData meta, Collection&amp;lt;Object&amp;gt; oids) {&lt;br/&gt;
+        return toOpenJPAObjectIds(meta, oids);&lt;/p&gt;</comment>
