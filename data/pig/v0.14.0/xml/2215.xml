        at org.apache.pig.tools.grunt.GruntParser.parseStopOnError(GruntParser.java:164)&lt;br/&gt;
        at org.apache.pig.tools.grunt.Grunt.run(Grunt.java:67)&lt;br/&gt;
        at org.apache.pig.Main.run(Main.java:487)&lt;br/&gt;
        at org.apache.pig.Main.main(Main.java:108)&lt;br/&gt;
Caused by: MismatchedTokenException(93!=3)&lt;br/&gt;
        at org.apache.pig.parser.AstValidator.recoverFromMismatchedToken(AstValidator.java:209)&lt;br/&gt;
        at org.antlr.runtime.BaseRecognizer.match(BaseRecognizer.java:115)&lt;br/&gt;
        at org.apache.pig.parser.AstValidator.func_clause(AstValidator.java:3497)&lt;br/&gt;
